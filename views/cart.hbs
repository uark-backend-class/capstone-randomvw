<h1>Your Cart</h1>
<br>
<a class="btn btn-primary" href='/add'>Add a Product</a>
<br>
<table class="table table-sm">
  <thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Category</th>
    <th>Size</th>
    <th>Quantity</th>
    <th>Price</th>
    <th></th>
  </tr>
<div>
  <ul>
  {{#each order}}
  <form action="/removeFromCart" method="DELETE">
    <tr>
      <td>{{this.productName}}</td>
      <td>{{this.description}}</td>
      <td>{{this.category.name}}</td>
      <td>{{this.size}}</td>
      <td>{{this.quantity}}</td>
      <td>${{this.price}}</td>
    </tr>
  </form>
  {{/each}}
  </ul>
</div>
</table>